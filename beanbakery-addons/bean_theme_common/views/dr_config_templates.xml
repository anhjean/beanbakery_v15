<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="frontend_layout" name="BeanBakery Frontend Layout" inherit_id="web.frontend_layout">
        <xpath expr="//head/script" position="after">
            <script type="text/javascript">
                odoo.dr_theme_config = <t t-out="json.dumps(request.env['ir.http'].get_dr_theme_config())"/>;
            </script>
        </xpath>
    </template>

    <template id="theme_config_page_menu" inherit_id="website.user_navbar">
        <xpath expr="//a[@data-action='ace']" position="after">
            <a t-if="website._get_dr_theme_config('theme_installed')" data-action="open-theme-prime-config-dialog" href="#" id="tp_bean_config" class="dropdown-item">
                <span>Bean Theme Configurations</span>
            </a>
        </xpath>
    </template>

</odoo>
