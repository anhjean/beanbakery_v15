    <template id="s_team_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector=".s_team_4 .list-inline-item" data-target="a">
                <we-urlpicker string="URL" data-select-attribute="" placeholder="e.g. /my-awesome-page" data-attribute-name="href"/>
            </div>
        </xpath>
    </template>

</odoo>
