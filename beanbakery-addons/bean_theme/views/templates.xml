    <!--
    ============================================================================
    Cart Sidebar
    ============================================================================
    -->
    <template id="cart_sidebar" name="Bean Theme: Cart Sidebar">
        <div class="container-fluid px-0 tp-cart-sidebar d-flex flex-column">
            <div class="row no-gutters justify-content-between align-items-center border-bottom p-3">
                <div class="col-auto d-flex align-item-center">
                    <i class="dri dri-cart text-primary fa-2x mr-2" style="font-size: 23px;"> </i>
                    <h5 class="mb-0 mr-1"> Your Cart </h5>
                </div>
                <div class="col-auto">
                    <a href="#" class="tp-close tp-remove-icon"  title="Close">
                        <i class="dri dri-cross-l"/>
                    </a>
                </div>
            </div>
            <div class="row no-gutters flex-grow-1">
                <div class="col-12 d-flex flex-column">
                    <div t-if="not order or not order.website_order_line" class="text-center">
                        <t t-call="bean_theme.tp_svg_cart">
                            <t t-set="_classes" t-value="'m-5'"/>
                        </t>
                        <h5 class="my-4">Your cart is empty!</h5>
                        <a class="btn btn-primary" href="/shop">
                            Shop Now
                        </a>
                    </div>
                    <t t-if="order and order.website_order_line">
                        <div class="tp-cart-products flex-grow-1 p-3 bg-300">
                            <t t-foreach="order.website_order_line" t-as="line">
                                <div class="media p-3 mb-3 shadow-sm bg-white position-relative" style="border-radius: 5px !important;">
                                    <div class="position-relative mr-2">
                                        <span t-field="line.product_id.image_128" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'rounded o_image_64_max border mr-2'}" />
                                    </div>
                                    <div class="media-body">
                                        <div class="d-flex justify-content-between">
                                            <h6><a class="tp-link-dark" t-att-href="line.product_id.website_url"><t t-out="line.name_short"/></a></h6>
                                            <a href="#" class="tp-remove-line tp-remove-icon ml-2 shadow-sm text-500" t-att-data-product-id="line.product_id.id" t-att-data-line-id="line.id" title="Remove">
                                                <i class="fa fa-times"/>
                                            </a>
                                        </div>
                                        <div class="css_quantity input-group tp-small">
                                            <t t-if="not line._is_not_sellable_line()">
                                                <div class="input-group-prepend">
                                                    <a href="#" class="btn btn-link js_add_cart_json d-none d-md-inline-block" aria-label="Remove one" title="Remove one">
                                                        <i class="fa fa-minus"/>
                                                    </a>
                                                </div>
                                                <input type="text" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-value="int(line.product_uom_qty) == line.product_uom_qty and int(line.product_uom_qty) or line.product_uom_qty" />
                                                <div class="input-group-append">
                                                    <a href="#" class="btn btn-link float_left js_add_cart_json d-none d-md-inline-block" aria-label="Add one" title="Add one">
                                                        <i class="fa fa-plus"/>
                                                    </a>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <span class="text-muted w-100" t-out="int(line.product_uom_qty)"/>
                                                <input type="hidden" class="js_quantity form-control quantity" t-att-data-line-id="line.id" t-att-data-product-id="line.product_id.id" t-att-value="line.product_uom_qty" />
                                            </t>
                                        </div>
                                        <div class="mt-2 d-inline-block float-right">
                                            <h6 t-field="line.price_reduce_taxexcl" class="text-primary" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}" groups="account.group_show_line_subtotals_tax_excluded" />
                                            <h6 t-field="line.price_reduce_taxinc" class="text-primary" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}" groups="account.group_show_line_subtotals_tax_included" />
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                        <div class="shadow">
                            <div class="border-top">
                                <div class="row no-gutters justify-content-between px-3 pt-4">
                                    <div class="col-auto">
                                        <h6 class="mb-0 text-body">Subtotal</h6>
                                    </div>
                                    <div class="col-auto">
                                        <h6 t-field="order.amount_untaxed" class="monetary_field text-body mb-0" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                                <div class="row no-gutters justify-content-between px-3 py-4">
                                    <div class="col-auto">
                                        <h6 class="mb-0 text-body">Taxes</h6>
                                    </div>
                                    <div class="col-auto">
                                        <h6 t-field="order.amount_tax" class="monetary_field text-body mb-0" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="row no-gutters justify-content-between p-3 pb-4">
                                    <div class="col-auto">
                                        <h5 class="mb-0">Total</h5>
                                    </div>
                                    <div class="col-auto">
                                        <h5 t-field="order.amount_total" class="monetary_field mb-0" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'display_currency': order.currency_id}"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row mx-0 pb-3">
                                <div class="col-6">
                                    <a class="btn btn-outline-primary btn-block" href="/shop/cart">
                                        View Cart
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-primary btn-block" href="/shop/checkout?express=1">
                                        Checkout
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </template>

    <!--
    ============================================================================
    Search Sidebar
    ============================================================================
    -->
    <template id="search_sidebar" name="Bean Theme: Search Sidebar">
        <div class="container-fluid px-0 tp-search-sidebar">
            <div class="row no-gutters justify-content-between align-items-center border-bottom p-3">
                <div class="col-auto">
                    <h5 class="mb-0">Search Products</h5>
                </div>
                <div class="col-auto">
                    <a href="#" class="tp-close tp-remove-icon" title="Close">
                        <i class="dri dri-cross-l"/>
                    </a>
                </div>
            </div>
            <div class="row no-gutters">
                <div class="col-12">
                    <t t-call="website.website_search_box_input">
                        <t t-set="_form_classes" t-valuef="o_wsale_products_searchbar_form o_not_editable p-2"/>
                        <t t-set="_classes" t-valuef=" "/>
                        <t t-set="search_type" t-valuef="products"/>
                        <t t-set="action" t-value="'/shop'"/>
                    </t>
                </div>
            </div>
        </div>
    </template>

    <!--
    ============================================================================
    Similar Products Sidebar
    ============================================================================
    -->
    <template id="similar_products_sidebar" name="Bean Theme: Similar Products Sidebar">
        <div class="container-fluid px-0 tp-similar-products-sidebar">
            <div class="row bg-white no-gutters justify-content-between align-items-center border-bottom p-3">
                <div class="col-auto">
                    <h5 class="mb-0">Similar Products</h5>
                </div>
                <div class="col-auto">
                    <a href="#" class="tp-close tp-remove-icon" title="Close">
                        <i class="dri dri-cross-l"/>
                    </a>
                </div>
            </div>
            <div class="tp-similar-products" t-if="len(products)">
                <t t-foreach="products" t-as="product">
                    <t t-value="product.get('category_info')" t-set="category"/>
                    <div class="row p-2 bg-white no-gutters shadow-sm border-bottom">
                        <div class="col-4">
                            <a t-att-href="product.get('website_url')">
                                <img class="img o_object_fit_cover" style="height:100px; width:100px;" t-att-src="product.get('img_medium')"/>
                            </a>
                        </div>
                        <div class="col-8">
                            <div class="row mb-2 align-items-center">
                                <div class="col-6">
                                    <a t-if="category" t-att-href="category.get('website_url')">
                                        <small class="text-body text-truncate d-block" t-out="category.get('name')"/>
                                    </a>
                                </div>
                                <div class="col-6 text-right">
                                    <t t-call="bean_theme.product_label">
                                        <t t-set="label" t-value="product.get('label')"/>
                                        <t t-set="style" t-value="'2'"/>
                                        <t t-set="_classes" t-value="'flat'"/>
                                    </t>
                                </div>
                            </div>
                            <h6 class="text-truncate mb-1">
                                <a class="tp-link-dark" t-att-href="product.get('website_url')">
                                    <t t-out="product.get('name')"/>
                                </a>
                            </h6>
                            <div class="mb-1">
                                <span class="h6 text-primary" t-raw="product.get('price')"/>
                                <small t-if="product.get('has_discounted_price')" class="text-body ml-1" style="text-decoration: line-through; white-space: nowrap;" t-raw="product.get('list_price')"/>
                            </div>
                            <div class="mb-1" t-if="is_rating_active">
                                <t t-raw="product.get('rating')"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
            <t t-else="">
                <t t-call="bean_theme.tp_svg_cart">
                    <t t-set="_classes" t-value="'m-5'"/>
                </t>
                <h5 class="my-4 text-center">No similar products found!</h5>
            </t>
        </div>
    </template>

    <!--
    ============================================================================
    Category Sidebar
    ============================================================================
    -->
    <template id="category_sidebar" name="Bean Theme: Category Sidebar">
        <t t-set="categories" t-value="website._get_website_category()"/>
        <div class="container-fluid px-0">
            <div class="row bg-white no-gutters justify-content-between align-items-center border-bottom p-3">
                <div class="col-auto">
                    <h5 class="mb-0">Categories</h5>
                </div>
                <div class="col-auto">
                    <a href="#" class="tp-close tp-remove-icon" title="Close">
                        <i class="dri dri-cross-l"/>
                    </a>
                </div>
            </div>
            <div class="row no-gutters py-2">
                <t t-foreach="categories" t-as="category">
                    <div class="col-6">
                        <a t-attf-href="/shop/category/#{category.id}" class="py-2 px-3 d-block">
                            <div class="card border-0 rounded shadow-sm">
                                <img class="o_image_64_max my-2 mx-auto card-img-top" t-attf-src="/web/image?model=product.public.category&amp;id=#{category.id}&amp;field=image_128" alt="Card image cap"/>
                                <div class="card-body p-2 text-center">
                                    <small t-out="category.name" class="text-truncate d-block card-title"></small>
                                </div>
                            </div>
                        </a>
                    </div>
                </t>
            </div>
        </div>
    </template>

    <!--
    ============================================================================
    Menu Label
    ============================================================================
    -->
    <template id="submenu" inherit_id="website.submenu" name="Bean Theme: Submenu">
        <xpath expr="//span[@t-field='submenu.name']" position="after">
            <span t-if="submenu.dr_menu_label_id" class="tp-menu-label" t-attf-style="background-color: #{submenu.dr_menu_label_id.background_color}; color: #{submenu.dr_menu_label_id.text_color}">
                <span t-field="submenu.dr_menu_label_id.name"/>
                <div class="before" t-attf-style="border-color: #{submenu.dr_menu_label_id.background_color};"/>
            </span>
        </xpath>
        <xpath expr="//a[@data-toggle='dropdown']/span" position="after">
            <span t-if="submenu.dr_menu_label_id" class="tp-menu-label" t-attf-style="background-color: #{submenu.dr_menu_label_id.background_color}; color: #{submenu.dr_menu_label_id.text_color}">
                <span t-field="submenu.dr_menu_label_id.name"/>
                <div class="before" t-attf-style="border-color: #{submenu.dr_menu_label_id.background_color};"/>
            </span>
        </xpath>
        <xpath expr="//span[@t-field='submenu.name']" position="before">
            <i t-if="submenu.dr_highlight_menu and submenu.is_mega_menu" class="dri dri-category mr-1"/>
        </xpath>
        <xpath expr="//a[@data-toggle='dropdown']/span" position="before">
            <i t-if="submenu.dr_highlight_menu and submenu.is_mega_menu" class="dri dri-category mr-1"/>
        </xpath>
        <xpath expr="//t[@t-set='show_dropdown']" position="after">
            <t t-set="item_class" t-valuef="#{item_class or ''}  #{submenu.dr_highlight_menu and 'tp-primary-bg tp-' + submenu.dr_highlight_menu or ''}"/>
        </xpath>
    </template>

